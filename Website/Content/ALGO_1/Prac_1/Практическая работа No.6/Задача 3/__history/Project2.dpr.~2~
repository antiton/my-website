program Project2;

{$APPTYPE CONSOLE}

{$R *.res}
uses
  System.SysUtils;
  Const
N=6;
var
 M:array [1..N] of integer;
 F:text;
 i,maxi:integer;
 procedure vvod;
 begin
 for i:=1 to N-1 do
 readln(M[i]);
    write('Ваш массив: ');
    for i := 1 to N - 1 do
        write(M[i]:5);
    writeln;
 end;
  procedure maxis;
   begin
   for i:=1 to N-1 do
   if M[i]>M[i+1] then
   maxi:=M[i];
   end;
   procedure result ;
    begin
      writeln('Максимум: ',maxi);
    end;
    procedure infile;
     begin
     Assignfile(F,' res.txt');
     rewrite(F);
     write (F,maxi);
     close(F);
     writeln('Результат занесен в папку');
     end;
begin
vvod;
maxis;
result;
infile;
readln;
end.
