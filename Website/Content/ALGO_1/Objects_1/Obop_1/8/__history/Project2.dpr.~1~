program Project2;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

Var
  a,b,c,d:integer;

begin
Writeln('Введите целое положительное трехзначное число: ');
read(a);
if a<99 then
writeln('Это не трехзначное число!')
else
b:=(a div(100)) mod(2);
if b=0 then
Writeln('Первое число четное')
else
Writeln('Первое число нечетное');
c:=((a mod(100)) div(10)) mod(2);
if c=0 then
Writeln('Второе число четное')
else
Writeln('Второе число нечетное');
d:=((a mod(100)) mod(10)) mod(2);
if d=0 then
Writeln('Третье число четное')
else
Writeln('Третье число нечетное');
readln;
readln;
end.
