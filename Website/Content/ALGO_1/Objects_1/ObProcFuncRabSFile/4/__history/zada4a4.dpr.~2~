program zada4a4;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

const n=5;                   //задание переменных
var
f:text;
i,min:integer;
a:array[1..n] of integer;
procedure vv;               //процедура ввода чисел в массив
begin
writeln('Введите пять чисел');
for i:=1 to n do
read(a[i]);
end;
procedure sum;              //процедура вычесления наименьшего числа в массиве
begin
for i:=1 to 1 do
begin
min:=a[i];
end;
for i:=1 to n do
 begin
 if(a[i] < min) then min := a[i];
 end;
end;
procedure vi;               //процедура вывода зачений
begin
writeln('Наименьшее число ',min);
end;
procedure fil;             //процедура записи значений в файл
begin
assignfile(f,'C:\Users\User\Desktop\сайт\Пз7\з3\res.txt');
rewrite(f);
writeln(f, 'Наименьшее число ',min);
closefile(f);
end;
begin                      //основная программа
vv;
sum;
vi;
fil;
readln;
readln;
end.
