program zada4a3;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

const n=5;
var
f:text;
i,max:integer;
a:array[1..n] of integer;
procedure vv;
begin
writeln('Введите пять чисел');
read(a);
end;
procedure sum;
begin
max:=0;
for i:=1 to n do
 begin
 if(a[i] > max) then max := a[i];
 end;
end;
procedure vi;
begin
writeln('Наибольшее число ',max);
end;
procedure fil;
begin
assignfile(f,'C:\Users\User\Desktop\сайт\Пз7\з3\res.txt');
rewrite(f);
writeln(f, 'Наибольшее число ',max);
closefile(f);
end;
begin
vv;
sum;
vi;
fil;
readln;
end.
