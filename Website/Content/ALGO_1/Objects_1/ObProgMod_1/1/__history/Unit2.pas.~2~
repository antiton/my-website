unit Unit2;

interface
function ClrScr ():string;

implementation
function ClrScr ():string;
  Var
 T: string;
 d,S,i,M: integer;
s1,p: char;
  begin
 Write ('Введите текст: ');
 ReadLn (T);
 s1 := '+';
 p := '-';
 d := Length (T);
 S := 0;
 M:=0;
 for i := 1 to d do
 BEGIN
 if (T [i] = s1)
 then
 Inc (S);
 END;
  WriteLn ('Количество вхождений символов + : ', S);
for i := 1 to d do
 BEGIN
 if (T [i] = p)
 then
 Inc (M);
 END;
 WriteLn ('Количество вхождений символов - : ', M);
 end;

end.
