unit Unit2;

interface
function ClrScr ():string;
implementation
function ClrScr ():string;
  Var
 T: string;
 d,S,i : integer;
s1,s2: char;
  begin
 Write ('Введите текст: ');
 ReadLn (T);
 s1 := '+';
 s2 := '−';
 d := Length (T);
 S := 0;
 for i := 1 to d do
 BEGIN
 if (T [i] = s1)
 then
 Inc (S);
 END;
for i := 1 to d do
 BEGIN
 if
 (T [i] = s2)
 then
 Inc (S);
 END;
 WriteLn ('Количество вхождений символов: ', S);
 end;

end.
