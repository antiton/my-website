program Project2;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var
 a,b:real;                   //Переменные
 begin                       //Начало
  writeln('Введите первое число: '); //Вывод на экран
  readln(a);                         //Задаем значение переменной
  writeln('Введите второе число: '); //Вывод на экран
  readln(b);                         //Задаем значение переменной
  if a>b then                        //Условие
   writeln('Максимум: ',a);
   writeln('Минимум: ',b);
  if a=b then                        //Условие
   writeln('Максимум и минимум совпадают: ',a);
  if a<b then                        //Условие
   writeln('Максимум: ',b);
   writeln('Минимум: ',a);
  readln;
  end.                              //Конец
