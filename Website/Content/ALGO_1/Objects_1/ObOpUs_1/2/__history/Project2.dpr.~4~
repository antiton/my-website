program Project2;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var
 a,b:real;                   //Переменные
 begin                       //Начало
  writeln('Введите первое число: '); //Вывод на экран
  readln(a);                         //Задаем значение переменной
  writeln('Введите второе число: '); //Вывод на экран
  readln(b);
   if a=b then
   begin                        //Условие
   writeln('Максимум и минимум совпадают: ',a);
   end;                          //Задаем значение переменной
  if a>b then
  begin                        //Условие
   writeln('Максимум: ',a,'Минимум: ',b);
   writeln('Минимум: ',b)
  end
 else begin
   writeln('Максимум: ',b);
   writeln('Минимум: ',a);
 end;
 readln;
   end.


                              //Конец
