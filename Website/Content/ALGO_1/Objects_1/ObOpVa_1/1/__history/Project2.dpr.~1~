program Project2;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

Var
  i:integer;
begin
 Writeln('Введите число от 1 до 7: ');
 Readln(i);
 case i of
 1: writeln('Понедельник');
  2: writeln('Вторник');
   3: writeln('Среда');
    4: writeln('Четверг');
     5: writeln('Пятница');
      6: writeln('Суббота');
       7: writeln('Воскресенье');
 end;
 readln;
end.
